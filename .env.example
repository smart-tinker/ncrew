# Главный бот, который слушает чат
MAIN_BOT_TOKEN=your_main_listener_bot_token_here

# ID группового чата, в котором работает система.
# Сообщения из других чатов должны игнорироваться.
TARGET_CHAT_ID=your_target_group_chat_id_here

# =================================================================
# Ролевая конфигурация (roles/agents.yaml)
# =================================================================

# Токены для Telegram ботов ролей
# Имена переменных генерируются автоматически: {TELEGRAM_BOT_NAME}_TOKEN
# Система автоматически находит эти токены при загрузке конфигурации на основе roles/agents.yaml
# Пример: для роли с telegram_bot_name: "SoftwareDevBot" нужен SOFTWAREDEVBOT_TOKEN
SOFTWAREDEVBOT_TOKEN=your_software_dev_bot_token
CODEREVIEWBOT_TOKEN=your_code_review_bot_token
PRODUCTOWNERBOT_TOKEN=your_product_owner_bot_token
ARCHITECTBOT_TOKEN=your_architect_bot_token
PRODUCTANALYSTBOT_TOKEN=your_product_analyst_bot_token
SECURITYBOT_TOKEN=your_security_analyst_bot_token
DEVOPSBOT_TOKEN=your_devops_bot_token
SDETBOT_TOKEN=your_sdet_bot_token
SCRUMMASTERBOT_TOKEN=your_scrum_master_bot_token
SYSTEMANALYSTBOT_TOKEN=your_system_analyst_bot_token

# CLI агенты настраиваются в roles/agents.yaml через поле cli_command для каждой роли
# Gemini CLI requires authentication - configure via GEMINI_API_KEY or ~/.gemini/settings.json
# GEMINI_API_KEY=your_gemini_api_key_here  # Optional: set if using API key authentication

# System Configuration
MAX_CONVERSATION_LENGTH=50
AGENT_TIMEOUT=120
LOG_LEVEL=INFO
DATA_DIR=./data

# System Reminder Configuration
# Как часто повторять системный промпт агенту (каждые N ответов)
SYSTEM_REMINDER_INTERVAL=5