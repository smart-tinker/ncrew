# Главный бот, который слушает чат
MAIN_BOT_TOKEN=your_main_listener_bot_token_here

# ID группового чата, в котором работает система.
# Сообщения из других чатов должны игнорироваться.
TARGET_CHAT_ID=your_target_group_chat_id_here

# =================================================================
# Ролевая конфигурация (roles/agents.yaml)
# =================================================================

# Токены для Telegram ботов ролей
# Имена переменных генерируются автоматически: {TELEGRAM_BOT_NAME}_TOKEN
# Система автоматически находит эти токены при загрузке конфигурации на основе roles/agents.yaml
# Пример: для роли с telegram_bot_name: "Software_Dev_Bot" нужен SOFTWARE_DEV_BOT_TOKEN
SOFTWARE_DEV_BOT_TOKEN=your_software_dev_bot_token
CODE_REVIEW_BOT_TOKEN=your_code_review_bot_token
PRODUCT_OWNER_BOT_TOKEN=your_product_owner_bot_token
SENIOR_ARCHITECT_BOT_TOKEN=your_architect_bot_token
PRODUCT_ANALYST_BOT_TOKEN=your_product_analyst_bot_token
SECURITY_ANALYST_BOT_TOKEN=your_security_analyst_bot_token
DEVOPS_SENIOR_BOT_TOKEN=your_devops_bot_token
SDET_SENIOR_BOT_TOKEN=your_sdet_bot_token
SCRUM_MASTER_BOT_TOKEN=your_scrum_master_bot_token
SYSTEM_ANALYST_BOT_TOKEN=your_system_analyst_bot_token

# CLI агенты настраиваются в roles/agents.yaml через поле cli_command для каждой роли
#
# ВАЖНО: NeuroCrew Lab не управляет авторизацией CLI инструментов!
# Пользователь должен предварительно аутентифицировать каждый CLI инструмент:
# - Gemini CLI: `gemini` (следуйте инструкциям CLI)
# - Qwen CLI: `qwen --experimental-acp` (OAuth аутентификация)
# - Другие CLI: следуйте документации каждого инструмента

# System Configuration
MAX_CONVERSATION_LENGTH=50
AGENT_TIMEOUT=120
LOG_LEVEL=INFO
DATA_DIR=./data

# Gemini ACP Configuration
# Максимальное количество последовательных таймаутов перед обнаружением зависания
GEMINI_MAX_TIMEOUTS=5

# System Reminder Configuration
# Как часто повторять системный промпт агенту (каждые N ответов)
SYSTEM_REMINDER_INTERVAL=5